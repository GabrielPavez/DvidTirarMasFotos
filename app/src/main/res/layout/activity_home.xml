<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/app_bg">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Menú Principal"
            app:titleTextColor="@color/brand_primary"
            app:background="@color/app_bg"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <FrameLayout
                android:id="@+id/btnIrPerfil"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/brand_primary"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/on_primary"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GitHub"
                    android:textColor="@color/on_primary"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnAyuda"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_grey_light"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="@color/text_main"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayuda"
                    android:textColor="@color/text_main"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnAbrirWeb"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_grey_dark"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="@color/brand_primary"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sitio Web"
                    android:textSize="20sp"
                    android:textColor="@color/text_main"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnAbrirMapa"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_grey_light"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="@color/text_main"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapa"
                    android:textColor="@color/text_main"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnEnviarCorreo"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_yellow_dark"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/on_primary"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textColor="@color/on_primary"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnLinterna"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_yellow_light"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/on_primary"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_linterna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linterna"
                    android:textColor="@color/on_primary"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnCompartir"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_grey_light"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@color/text_main"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compartir"
                    android:textColor="@color/text_main"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnCamara"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_white_translucent"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/text_main"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomar Fotografía"
                    android:textSize="20sp"
                    android:textColor="@color/text_main"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnLlamar"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@color/tile_grey_dark"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_dialog_dialer"
                    app:tint="@color/brand_primary"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Llamar"
                    android:textSize="20sp"
                    android:textColor="@color/text_main"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </GridLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>